<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="hibernate.cache.use_query_cache">false</property>
        <property name="hibernate.cache.use_second_level_cache">false</property>
        <property name="hbm2ddl.auto">create</property>
        <property name="hibernate.show_sql">true</property>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:mem:test</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="connection.pool_size">1</property>

        <mapping class="com.nixsolutions.bean.Address"/>
        <mapping class="com.nixsolutions.bean.Author"/>
        <mapping class="com.nixsolutions.bean.Book"/>
        <mapping class="com.nixsolutions.bean.Document"/>
        <mapping class="com.nixsolutions.bean.DocumentType"/>
        <mapping class="com.nixsolutions.bean.Genre"/>
        <mapping class="com.nixsolutions.bean.Language"/>
        <mapping class="com.nixsolutions.bean.Order"/>
        <mapping class="com.nixsolutions.bean.OrderType"/>
        <mapping class="com.nixsolutions.bean.PublishingHouse"/>
        <mapping class="com.nixsolutions.bean.Role"/>
        <mapping class="com.nixsolutions.bean.Shelf"/>
        <mapping class="com.nixsolutions.bean.User"/>

    </session-factory>
</hibernate-configuration>